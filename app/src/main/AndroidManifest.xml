<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uottawa.plscuddleme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/minion_launch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/minion_launch"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.AddHouseChoreActivity" />
        <activity android:name=".activities.AddFamilyMemberActivity" />
        <activity android:name=".activities.SignInActivity" />
        <activity android:name=".activities.UpdateChoreActivity"></activity>
    </application>

</manifest>