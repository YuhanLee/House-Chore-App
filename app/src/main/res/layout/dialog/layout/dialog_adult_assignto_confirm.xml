<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutAllMatch">

    <TextView
        android:id="@+id/descriptionConfirm"
        style="@style/layoutAllWrap"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text='@string/assignTo_options'
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner_assign_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionConfirm"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_assign_to"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/layoutAllWrap"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btn_assign"
            style="@style/layoutAllWrap"
            android:layout_weight="1"
            android:text="@string/assign" />
    </LinearLayout>

</RelativeLayout>