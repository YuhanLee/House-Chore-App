<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutAllMatch">

    <LinearLayout
        android:id="@+id/resourceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            style="@style/layoutAllWrap"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="@string/title_edit_resource"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:id="@+id/editTextResourceName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:hint="@string/edit_resource_name" />

        <Spinner
            android:id="@+id/spinnerNewAllocatedChore"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">

        </Spinner>

        <TextView
            style="@style/layoutAllWrap"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="@string/allocate_to_another_chore"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resourceInfo"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/buttonPrimary"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/buttonPrimary"
            android:text="@string/delete" />

        <Button
            android:id="@+id/btn_edit_resource"
            style="@style/buttonPrimary"
            android:text="@string/confirm" />
    </LinearLayout>

</RelativeLayout>